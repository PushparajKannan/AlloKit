<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.allocare.allokit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/allokitaplogo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/allokitaplogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="Q">
        <activity android:name=".cartmodule.CartActivity"></activity>
        <activity
            android:name=".address.AddressActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GsingupActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".kitmodule.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".notification.NotificationDetailed"
            android:screenOrientation="portrait" />
        <activity
            android:name=".notification.NotificationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".kitmodule.MyOrderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".kitmodule.OrderSumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".kitmodule.SignOTPUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".kitmodule.Grocerykit"
            android:screenOrientation="portrait" />
    </application>

</manifest>