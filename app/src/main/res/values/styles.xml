    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <declare-styleable name="FirstImageView">
        <attr name="corner" format="dimension"/>
        <attr name="leftcorner" format="dimension"/>
        <attr name="rightcorner" format="dimension"/>
        <attr name="topcorner" format="dimension"/>
        <attr name="bottomcorner" format="dimension"/>
    </declare-styleable>

</resources>
