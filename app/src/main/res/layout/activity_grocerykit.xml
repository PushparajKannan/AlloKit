                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rs: 1000"
                                android:fontFamily="@font/psr"
                                android:textSize="14sp"
                                android:layout_marginRight="8dp"
                                android:layout_weight="10"
